<h1>Cocktails</h1>

<div class="container">
  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <div>
        <li class="list-group-item">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= link_to "♻️",
                cocktail_path(cocktail),
                method: :delete,
                data: { confirm: "Are you sure?" } %>

        </li>

      </div>

    <% end %>
  </ul>
</div>

<%= link_to "New Cocktail", new_cocktail_path %>
