
  <div class="mt-5 container">
  <h1>Cocktails</h1>  <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-success" %>


      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-12 col-md-4">
            <div class="card" style="height: 450px">


                  <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>

                <div class="card-body">
                  <h5 class="card-title">
                    <%= cocktail.name%>
                  </h5>

                  <div class="card-text">
                    <%= link_to "(Delete❌)",
                          cocktail_path(cocktail),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %>
                          <br>
                    <%= link_to "check recipe",cocktail_path(cocktail), class: "btn btn-primary"%>
                  </div>
                </div>

          </div>
            </div>

        <% end %>

  </div>
      </div>



