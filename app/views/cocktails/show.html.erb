<div class="container mt-5" style="width:450px">
  <div class="card-body">
    <div class="card" style="width:250px">
        <h1 class="card-title"> <%= @cocktail.name %></h1>
          <%= cl_image_tag @cocktail.photo.key, height: 300, width: 200, crop: :fill, class: "card-img-top" %>


          <% @cocktail.doses.each do |dose| %>

              <p class="card-text"> Doses: <%= dose.description %></p>

          <% end  %>

          <% @cocktail.ingredients.each do |ingredient| %>

              <p class="card-text"> Ingredients: <%= ingredient.name %></p>

          <% end  %>


        <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-primary"%>
        <%= link_to "Add dose of ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
    </div>
  </div>
</div>



